<ul>
  {{!-- Note: 'this.' is calling the sneakers from the DB --}}
  
  <div class="panel-container">
    {{#each sneakersFromDB}}
      <div class="panel">
        <a href="/sneakers/{{this._id}}"> {{this.name}} </a>
        <img src="{{this.imageURL}}" alt="" width="300">
        {{#if ../currentUser}}
          <h3><b>Release Date: {{this.date}} </b></h3>
        {{else}}
          <p><b>Login to view the Lost Soles release details</b></p>
        {{/if}}
        
        {{!-- if isOwner then show Delete button, if not Owner then don't show it --}}
        {{#if this.isOwner}}
          <form action="/sneakers/{{this._id}}/delete" method="POST">
            <button type="submit">Delete</button>
          </form>
        {{!-- {{else}}
          <p><b>You must be logged in to view the release dates!!!</b></p> --}}
        {{/if}}
      </div>  
    {{/each}}
  </div>
</ul>
