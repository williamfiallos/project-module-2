{{!-- Note: 'this.' is calling the sneakers from the DB --}}
<div id="structure" class="container">
  
    {{!-- <h3>Sneakers at Lost Soles</h3> --}}
    {{#each sneakersFromDB}}
      <article class="service-box col">
        <img class="img" src="{{this.imageURL}}" alt="Sneaker image">
        <h4><a href="/sneakers/{{this._id}}"> {{this.name}} </a></h4>
        <div class="card">
          {{#if ../currentUser}}
            <p>Release Date: {{this.date}}</p>
          {{else}}
            <p><b>Login to view release date!</b></p>
          {{/if}}
            {{!-- if isOwner then show Delete button, if not Owner then don't show it --}}
          {{#if this.isOwner}}
            <form action="/sneakers/{{this._id}}/delete" method="POST">
              <button type="submit">Delete</button>
            </form>
          {{/if}}
        </div>
      </article>
    {{/each}}

</div>

